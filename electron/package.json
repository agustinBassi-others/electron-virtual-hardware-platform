{
  "name": "vihard",
  "productName": "ViHard",
  "description": "Virtual hardware platform to learn embedded systems programming",
  "author": "Agustin Bassi <jagustinbassi@gmail.com>",
  "license": "MIT",
  "version": "0.2.3",
  "repository": "https://github.com/agustinBassi/virtual_hard_platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac":    "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win-32": "electron-packager . vihard --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='ViHard'",
    "package-lin-32": "electron-packager . vihard --overwrite --asar=true --platform=linux --arch=ia32 --icon=assets/icons/png/512x512.png --prune=true --out=release-builds",
    "package-lin-64": "electron-packager . vihard --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/512x512.png --prune=true --out=release-builds"
  },
  "keywords": [
    "Electron",
    "Hardware",
    "Firmware",
    "Software",
    "Virtual",
    "EDU CIAA",
    "Arduino",
    "Raspberry"
  ],
  "devDependencies": {
    "electron": "^2.0.14",
    "electron-packager": "^13.0.0"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "readline": "^1.3.0",
    "serialport": "^6.2.2"
  }
}